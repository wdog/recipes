# Mako notification daemon configuration

# Theme and appearance
background-color=#2b2b2b
text-color=#ffffff
border-color=#444444
border-size=2
border-radius=5
font=Sans 13
padding=10
margin=20
width=350
height=100
anchor=top-right

# Default timeout for normal priority notifications (1 second)
default-timeout=1000

# Low priority notifications timeout (500ms)
[urgency=low]
default-timeout=1000
background-color=#2d3142
border-color=#4f5b66

# Critical/urgent notifications (never timeout)
[urgency=critical]
default-timeout=0
background-color=#bf616a
text-color=#ffffff
border-color=#d08770

# High priority notifications (same as normal for now)
[urgency=high]
default-timeout=2000
background-color=#d08770
text-color=#2b2b2b
border-color=#ebcb8b
