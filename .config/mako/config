# Mako notification daemon configuration
# mutagen generated colors
include=~/.config/mako/colors.ini

# Theme and appearance
border-size=2
border-radius=5
font=Sans 13
padding=10
margin=20
width=350
height=100
anchor=top-right


# Default timeout for normal priority notifications (1 second)
default-timeout=1000

# Low priority notifications timeout (500ms)
[urgency=low]
default-timeout=1000

# Critical/urgent notifications (never timeout)
[urgency=critical]
default-timeout=50000

# High priority notifications (same as normal for now)
[urgency=high]
default-timeout=2000

